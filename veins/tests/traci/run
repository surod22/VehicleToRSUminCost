#!/bin/sh
echo ""
echo "-------------------------------------------------------------------------------"
echo "-- Running tests and collecting results ---------------------------------------"
echo "-------------------------------------------------------------------------------"
(opp_run -l../../src/veins -l ../../../inet/src/inet -n"../../src/base;../../src/modules;../../../inet/src;.." "$@" || echo "FAILED: run aborted") | tee out.tmp
echo ""
echo "-------------------------------------------------------------------------------"
echo "-- Results --------------------------------------------------------------------"
echo "-------------------------------------------------------------------------------"
cat out.tmp | egrep -i "^(Pass|FAIL)"
